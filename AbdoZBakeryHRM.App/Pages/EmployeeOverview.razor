@page "/employeeoverview"

<h1 class="page-title">All Employees</h1>

@if (Employees == null)
{
    <p><em>Loading Employees...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Employees)
            {
                <tr>
                    <td><img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{emp.EmployeeId}-small.jpg")" class="rounded-circle" /></td>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>
                        <a href="@($"employeedetail/{emp.EmployeeId}")" class="btn btn-primary table-btn">
                            <i class="fa fa-info-circle fa-2x"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}